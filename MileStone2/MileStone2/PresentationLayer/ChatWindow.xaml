        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MileStone2.PresentationLayer"
        mc:Ignorable="d"
        Title="ChatRoomWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtMsgBody" HorizontalAlignment="Left" Height="40" Margin="300,255,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="379" AutomationProperties.HelpText="write a message"/>
        <Button x:Name="btnSend" Content="Button" HorizontalAlignment="Left" Margin="694,255,0,0" VerticalAlignment="Top" Width="78" Height="40" Click="btnSend_Click"/>

    </Grid>
